{% extends 'base.html.twig' %}

{% block title %}Citations | Auteurs{% endblock %}

{% block body %}
<div class="container mt-4">
    {% if auteurs|length > 0 %}
    <h1>Les auteurs :</h1>

    {# lien cree un auteur #}
    <a href="{{ path('auteur.new') }}" class="btn btn-primary mt-4">
        Créer un auteur
    </a>

    {% for message in app.flashes('success') %}
    <div class="alert alert-success mt-4">
        {{ message }}
    </div>
    {% endfor %}
    <div class="count mt-4">
        Il y a
        {{ auteurs.getTotalItemCount }}
        Auteurs au total.
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nom de l'auteur</th>
                <th scope="col">Biographie</th>
                <th scope="col">Date de création</th>
                <th scope="col">Modifier</th>
                <th scope="col">Supprimer</th>
            </tr>
        </thead>
        <tbody>
            {% for auteur in auteurs %}
            <tr class="table-primary">
                <td>{{ auteur.auteur }}</td>
                <td>{{ auteur.bio }}</td>

                <td>{{ auteur.dateModif|date('d/m/Y') }}</td>
                <td>
                    <a href="{{ path('auteur.edit', { id: auteur.id }) }}" class="btn btn-info">
                        Modifier
                    </a>
                </td>
                <td>
                    <a href="{{ path('auteur.delete', { id: auteur.id }) }}" class="btn btn-warning">
                        Supprimer
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="navigation d-flex justify-content-center mt-4 mb-4">
        {{ knp_pagination_render(auteurs) }}
    </div>
    {% else %}
    <h4>Il n'y a pas d'auteurss</h4>
    {% endif %}
</div>
{% endblock %}