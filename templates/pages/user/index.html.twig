{% extends 'base.html.twig' %}

{% block title %}Citations | utilisateurs{% endblock %}

{% block body %}
<div class="container mt-4">
    {% if users|length > 0 %}
    <h1>Les utilisateurs :</h1>

    <a href="{{ path('users.new') }}" class="btn btn-primary mt-4">
        Créer un user
    </a>

    {% for message in app.flashes('success') %}
    <div class="alert alert-success mt-4">
        {{ message }}
    </div>
    {% endfor %}
    <div class="count mt-4">
        Il y a
        {{ users.getTotalItemCount }}
        utilisateurs au total.
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Email utilisateur</th>
                <th scope="col">Rôle</th>
                <th scope="col">Date de création</th>
                <th scope="col">Modifier</th>
                <th scope="col">Supprimer</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr class="table-primary">
                <td>{{ user.email }}</td>
                {% if user.roles[0] == 'ROLE_ADMIN' %}
                <td>Administrateur</td>
                {% else %}
                <td>Utilisateur</td>
                {% endif %}
                <td>{{ user.createdAt|date('d/m/Y') }}</td>

                <td>
                    <a href="{{ path('users.edit', { id: user.id }) }}" class="btn btn-info">
                        Modifier
                    </a>
                </td>
                <td>
                    <a href="{{ path('users.delete', { id: user.id }) }}" class="btn btn-warning">
                        Supprimer
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="navigation d-flex justify-content-center mt-4 mb-4">
        {{ knp_pagination_render(users) }}
    </div>
    {% else %}
    <h4>Il n'y a pas d'utilisateurs</h4>
    {% endif %}
</div>
{% endblock %}